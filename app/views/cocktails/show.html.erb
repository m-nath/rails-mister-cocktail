<div class="banner">
  <h1><%= @cocktail.name %></h1>
</div>


<div class="card-product">
  <% if @cocktail.photo.present? %>
    <%= cl_image_tag @cocktail.photo, crop: :fill, class: "card-img-top" %>
  <% else %>
    <img class="card-img-top" src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2786&q=80" alt="Card image cap">
  <% end %>
    <h3>Ingredients</h3>
    <% @cocktail.doses.each do |dose| %>
    <ul>
      <li><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to "Delete", dose_path(dose), method: :delete %></li>
    </ul>
    <% end %>
  </div>
</div>


<br>
<%= link_to "Add Dose", new_cocktail_dose_path(@cocktail) %>

<br>
<%= link_to 'Back', cocktails_path  %>


