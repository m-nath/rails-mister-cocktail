<title>Mister Cocktail</title>
<div class="banner">
  <h1 class="main">Mister Cocktail</h1>
  <div class="int-btn">
    <%= render 'cocktails/form' %>
  </div>
</div>
<div class="container">
  <div class="grid-container">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <div class="card-body">
          <% if cocktail.photo.present? %>
            <%= cl_image_tag cocktail.photo, crop: :fill, class: "card-img-top" %>
          <% else %>
            <img class="card-img-top" src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2786&q=80" alt="Card image cap">
          <% end %>
          <h5 class="card-title text-center"><%= link_to cocktail.name, cocktail_path(cocktail), { :class=>"stretched-link" } %></h5>
        </div>
      </div>
    <% end %>
  </div>
  <br>