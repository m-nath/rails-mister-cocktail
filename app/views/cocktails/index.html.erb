<title>Mister Cocktail</title>

<div class="container">
  <h1>Mister Cocktail</h1>
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Banner url</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <div class="grid-container">
    <% @cocktails.each do |cocktail| %>
    <div class="card">
      <div class="card-body">
        <img class="card-img-top" src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2786&q=80" alt="Card image cap">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      </div>
      <div class="card-footer">
        <small class="text-muted"><%= link_to "More info", cocktail_path(cocktail) %></small>
      </div>
    </div>
    <% end %>
  </div>

